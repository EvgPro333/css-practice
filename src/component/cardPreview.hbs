{{#with data}}
		{{!-- <div class="page_block"> --}}
			{{!-- <div class="row"> --}}
				{{!-- <div class="col-6"> --}}
					<div class="preview {{../class}}">
						<div class="preview_header">
							<span class="preview_header preview_date"> {{date}} </span>
							{{!-- <span class="preview_header preview_category"> World </span> --}}
							{{!-- <span class="preview_header preview_category"> Hot </span> --}}
							{{#each category}}
								{{!-- <span class="preview_header preview_category"> {{text}} </span> --}}
								{{!-- <span class="preview_header preview_category preview_category_1"> {{text}} </span> --}}
								<span class="preview_header preview_category preview_category_{{id}}"> {{text}} </span>
							{{/each}}
						</div>
						<strong class="preview_title">{{title}}</strong>
						<p class="preview_description">This is a wider card with supporting text below as a natural lead-in to additional content</p>
						<a href="#">Continue reading</a>
					</div>
				{{!-- </div> --}}
			{{!-- </div> --}}
		{{!-- </div> --}}
{{/with}}
