{{!-- ! ########################################################################################## HEADER --}}
	<header class="page_block">
		<div class="header">
			<div class="">
				{{> logo}}
			</div>
			<nav class="header_nav">
				<div class="header_nav_right">
					{{> nav list=header}}
				</div>
			</nav>
		</div>
	</header>

{{!-- ! ########################################################################################## MAIN --}}
	{{!-- ------------------------------------------- massages --}}
	<main class="main">
		{{#with messages}}
			<div class="massages">
				<h1 class="massages_title"> {{title}} </h1>
				{{#each list}}
					{{!-- <ul> --}}
						<div class="msg">
							<strong class="msg_name"> {{name}} </strong>
							<p class="msg_text"> {{message}} </p>
							<span class="msg_day"> {{day}} </span>
						</div>
					{{!-- </ul> --}}
				{{/each}}
				<a href="#" class="messages_link"> All messages </a>

			</div>
		{{/with}}

	{{!-- ------------------------------------------- form--}}
		{{#with form}}
			<form class="form">
				<h2 class="form_title"> {{title}} </h2>
				<div class="form_inputs_list">
					{{#each inputs}}
						<input class="form_inputs" type="{{type}}" placeholder="{{placeholder}}" name="name" id="form_input_{{id}}" />
					{{/each}}
				</div>
				<div class="form_checkbox">
					<input class="form_inputs" type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}"/>
					<div class=""></div>
					<label for="{{checkbox.name}}"> {{checkbox.label}} </label>
				</div>
				<button type="submit" class="form_button"> {{button}} </button>
				<p class="form_info"> {{info}} </p>
			</form>
		{{/with}}
	</main>
	
	{{!-- ------------------------------------------- actions--}}
	<div class="advantages">
		{{#each advantages}}
			<div class="advan">
				<strong> {{title}} </strong>
				<p> {{text}} </p>
			</div>
		{{/each}}

	</div>
	
{{!-- ! ########################################################################################## FOOTER --}}
<footer class="footer" id="test">
	<div class="">
		{{> logo}}
		<span class="footer_copyright"> Copyright 2023-2024 </span>
	</div>
	{{#each footer}}
		<div class="">
			<span class="footer_title"> {{title}} </span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>
