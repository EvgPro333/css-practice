{{!-- ! ########################################################################################## HEADER --}}
<header class="page_block">
	<div class="header">
		<div class="">
			{{> logo}}
		</div>
		<nav class="header_nav">
			<div class="header_nav_right">
				{{> nav list=header}}
			</div>
		</nav>
	</div>
</header>

{{!-- ! ########################################################################################## MAIN --}}
{{!-- <main> --}}
	{{!-- ------------------------------------------- hero --}}
	{{#with hero}}
		<div class="hero">
			<div class="hero_content">
				<h1 class="hero_title"> {{title}} </h1>
				<p class="hero_text"> {{text}} </p>
			</div>

			{{!-- <div class="hero_photo"> --}}
				<img class="hero_image" src="{{photo}}" alt="hero_image">
			{{!-- </div> --}}
		</div>
	{{/with}}
	{{!-- ------------------------------------------- blog--}}
	<main class="blog">
		{{#each blog}}
			{{> cardBlog data=this}}

		{{/each}}
	</main>
	{{!-- ------------------------------------------- form--}}
	<div class="form">
		{{#with form}}
		<div class="form_content">
			<h3 class="form_title"> {{title}} </h3>
			<p class="form_info"> {{info}} </p>
		</div>
		<div class="form_action">
			<a class="button form_button" href="{{href}}">
				{{button}}
			</a>
		</div>
		{{/with}}
	</div>
{{!-- </main> --}}
{{!-- ! ########################################################################################## FOOTER --}}
<footer class="footer">
	<div class="">
		{{> logo}}
		<span class="footer_copyright"> Copyright 2023-2024 </span>
	</div>
	{{#each footer}}
		<div class="">
			<span class="footer_title"> {{title}} </span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>