<div class="page">
	<div class="page_content">

{{!-- ! ########################################################################################## HEADER --}}
		<div class="page_block">
			<header class="header row g-0">
				<div class="col-3">
					{{!-- <div class="logo">
						<span class="badge text-bg-primary"> B </span>
					</div> --}}
					{{!-- ||||||||||| --}}
					{{> logo}}
				</div>
				<nav class="header_nav col-9">
					<div class="header_nav_right">
						{{> nav list=header}}
					</div>
				</nav>
			</header>
			{{!-- <hr class="divider"> --}}
			{{!-- ||||||||||||||||||||||| --}}
			{{!-- <div class="divider"> </div> --}}
			{{!-- ||||||||||||||||||||||| додали в header - border-bottom: 1px solid #dee2e6; а divider в css вимкнули--}}
			{{!-- {{> divider}} --}}
		</div>

{{!-- ! ########################################################################################## MAIN --}}
		<div class="page_block">
																		{{!-- <h1 class="hero_title"> {{hero.title}} </h1>
																		<p class="hero_text"> {{hero.text}} </p> --}}
																		{{!-- ||||||||||||||||||||||| --}}
																		{{!-- {{> hero}} --}}
																		{{!-- ||||||||||||||||||||||| --}}
																		{{!-- {{> hero data=hero}} --}}
																		{{!-- ||||||||||||||||||||||| --}}
			{{> hero title=hero.title text=hero.text}}
												{{!-- {{> hero title="this is text h1 hero.title" text="this is text p hero.text"}} --}}
		</div>

		<div class="page_block">
			<main class="row plans">
				{{#each plans}}
					<div class="col plans_card">
						{{> card data=this}}
						
					</div>
				{{/each}}
			</main>
		</div>
		<div class="page_block">  
		<div class="calc">  
			<table class="table">
			<caption class="tables"> my table </caption>

				<tbody>
					{{#each footer}}
						<tr>
							{{#each links}}
								<td> {{text}} </td>
							{{/each}}
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		</div>
{{!-- ! ########################################################################################## FOOTER --}}
		<div class="page_block">
			{{!-- ||||||||||||||||||||||| додали в footer - border-top: 1px solid #dee2e6; а divider в css вимкнули--}}
			{{!-- {{> divider}} --}}
			<footer class="row footer g-0">
				<div class="col-3">
					{{> logo}}
					<span class="footer_copyright"> Copyright 2023-2024 </span>
				</div>

				{{#each footer}}
					<div class="col-3">
						<span class="footer_title"> {{title}} </span>
						{{> nav list=links isVertical=true}}
					</div>
				{{/each}}
			</footer>
		</div>
	</div>
</div>












