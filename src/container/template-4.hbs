{{!-- ! ########################################################################################## HEADER --}}
	<header class="page_block">
		<div class="header">
			<div class="">
				{{> logo}}
			</div>
			<nav class="header_nav">
				<div class="header_nav_right">
					{{> nav list=header}}
				</div>
			</nav>
		</div>
	</header>

{{!-- ! ########################################################################################## MAIN --}}
	{{!-- ------------------------------------------- main --}}
	{{#with main}}
		<main class="main">
			<div class="main_photo">
				<img class="main_image" src="{{image}}" alt="main_image">
			</div>

			<div class="main_content">
				<h1 class="main_title"> {{heading}} </h1>
				<p class="main_text"> {{description}} </p>
				<a class="button main_button" href="{{href}}">
					{{button}}
				</a>
			</div>
		</main>
	{{/with}}
	{{!-- ------------------------------------------- featured--}}
	<div class="featured">
		{{#each featured}}
			{{> cardFeatured data=this}}

		{{/each}}
	</div>
	{{!-- ------------------------------------------- actions--}}
	<div class="actions">
		{{#each actions}}
		<div class="actions_content">
		{{!-- <div class="acti_content"> --}}
			<h3 class="actions_title"> {{heading}} </h3>
			{{!-- <p class="actions_info"> {{text}} </p> --}}
		{{!-- </div> --}}
		{{!-- <div class="actions_action"> --}}
			<a class="button actions_button" href="{{url}}">
				{{text}}
			</a>
		</div>
	{{!-- </div> --}}
		{{/each}}
	</div>
{{!-- </main> --}}
{{!-- ! ########################################################################################## FOOTER --}}
<footer class="footer">
	<div class="">
		{{> logo}}
		{{!-- <span class="footer_copyright"> Copyright 2023-2024 </span> --}}
		<span class="footer_copyright"> &#169 </span>
	</div>
	{{#each footer}}
		<div class="">
			<span class="footer_title"> {{title}} </span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>